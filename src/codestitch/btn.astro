---
interface Props {
  href: string;
  ariaLabel: string;
  text: string;
}

const { href, ariaLabel, text } = Astro.props;
---

<style>
  /*-- -------------------------- -->
<---            CTA             -->
<--- -------------------------- -*/

  .cs-button-solid {
    font-size: calc(16 / 16 * 1rem);
    /* 46px - 56px */
    line-height: clamp(2.875rem, 5.5vw, 3.5rem);
    text-decoration: none;
    @apply border-solid border border-midnight-teal;
    font-weight: 700;
    text-align: center;
    margin: 0;
    color: black;
    min-width: calc(150 / 16 * 1rem);
    padding: 0 calc(32 / 16 * 1rem);
    overflow: hidden;
    background: white;
    border-radius: calc(80 / 16 * 1rem);
    display: inline-block;
    width: auto;
    position: relative;
    z-index: 1;
    box-sizing: border-box;

    &:before {
      content: "";
      position: absolute;
      height: 100%;
      width: 0%;
      @apply bg-midnight-teal;
      opacity: 1;
      top: 0;
      left: 0;
      z-index: -1;
      transition: width 0.3s;
    }

    &:hover {
      cursor: pointer;
      &:before {
        width: 100%;
      }
    }
  }
</style>

<a href={href} class="cs-submit cs-button-solid" aria-label={ariaLabel}>
  {text}
</a>

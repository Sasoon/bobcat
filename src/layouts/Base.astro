      import anime from "animejs";
      window.addEventListener("DOMContentLoaded", () => {
        const sections = document.querySelectorAll(".cs-container ");
        anime({
          targets: sections,
          opacity: [0, 1],
          translateY: [50, 0],
          duration: 300,
          easing: "easeOutQuad",
          delay: anime.stagger(200),
        });
      });
    </script> -->
    <script
      is:inline
      defer
      src="https://cloud.umami.is/script.js"
      data-website-id="c00d56a0-7852-45bb-9661-19f54c572df8"></script>
  </head>
  <body class="pt-[96px]">
    <TwSizeIndicator />
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>

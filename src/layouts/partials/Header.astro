---
import Logo from "@/components/Logo.astro";
import menu from "@/config/menu.json";

const pathname = new URL(Astro.request.url).pathname;

export interface ChildNavigationLink {
  name: string;
  url: string;
}

export interface NavigationLink {
  name: string;
  url: string;
  hasChildren?: boolean;
  children?: ChildNavigationLink[];
}

const { main }: { main: NavigationLink[] } = menu;
---

<header
  id="main-header"
  class="header z-40 bg-white flex flex-start py-4 transition-all duration-300 fixed top-0 left-0 right-0 z-10"
>
  <nav class="navbar container flex items-center">
    <!-- logo -->
    <div class="order-0">
      <Logo />
    </div>
    <!-- navbar toggler -->
    <input id="nav-toggle" type="checkbox" class="hidden" />
    <label
      id="show-button"
      for="nav-toggle"
      class="order-2 flex cursor-pointer items-center md:order-1 md:hidden"
    >
      <svg class="h-6 fill-current" viewBox="0 0 20 20">
        <title>Menu Open</title>
        <path d="M0 3h20v2H0V3z m0 6h20v2H0V9z m0 6h20v2H0V0z"></path>
      </svg>
    </label>
    <label
      id="hide-button"
      for="nav-toggle"
      class="order-2 cursor-pointer items-center md:order-1"
    >
      <svg class="h-6 fill-current" viewBox="0 0 20 20">
        <title>Menu Close</title>
        <polygon
          points="11 9 22 9 22 11 11 11 11 22 9 22 9 11 -2 11 -2 9 9 9 9 -2 11 -2"
          transform="rotate(45 10 10)"></polygon>
      </svg>
    </label>
    <!-- /navbar toggler -->

    <ul
      id="nav-menu"
      class="navbar-nav order-3 hidden w-full md:order-1 md:flex md:w-auto md:space-x-6"
    >
      {
        main.map((menu) => (
          <>
            {menu.hasChildren ? (
              <li class="nav-item nav-dropdown group relative">
                <span class="nav-link inline-flex items-center">
                  {menu.name}
                  <svg class="h-4 w-4 fill-current" viewBox="0 0 20 20">
                    <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                  </svg>
                </span>
                <ul class="nav-dropdown-list hidden group-hover:block md:invisible md:absolute md:block md:opacity-0 md:group-hover:visible md:group-hover:opacity-100">
                  {menu.children?.map((child) => (
                    <li class="nav-dropdown-item">
                      <a
                        href={child.url}
                        class={`nav-dropdown-link block ${
                          pathname === child.url &&
                          "nav-link-active text-purple-600"
                        }`}
                      >
                        {child.name}
                      </a>
                    </li>
                  ))}
                </ul>
              </li>
            ) : (
              <li class="nav-item w-auto group text-center">
                <a
                  href={menu.url}
                  class={`nav-link block group-last:px-0 text-midnight-teal font-medium ${
                    pathname === menu.url && "nav-link-active  text-purple-600"
                  }`}
                >
                  {menu.name}
                </a>
              </li>
            )}
          </>
        ))
      }
    </ul>
  </nav>
</header>

<script>
  function setupHeaderScroll() {
    const header = document.getElementById("main-header");
    const scrollThreshold = 5;

    function handleScroll() {
      if (window.scrollY > scrollThreshold) {
        header.classList.add("py-2", "shadow-header");
        header.classList.remove("py-4");
      } else {
        header.classList.remove("py-2", "shadow-header");
        header.classList.add("py-4");
      }
    }

    window.addEventListener("scroll", handleScroll);
    // Initial check in case the page is already scrolled
    handleScroll();
  }

  // Run on initial page load
  setupHeaderScroll();

  // Run on subsequent navigations
  document.addEventListener("astro:page-load", setupHeaderScroll);
</script>

<style>
  .shadow-header {
    box-shadow: 0 15px 11px 1px rgba(0, 0, 0, 0.2);
  }
</style>
